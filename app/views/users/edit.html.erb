<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h1>User Info</h1>
 <tr> <%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
   <p> <%= f.text_field :name, autofocus: true, placeholder:"名前"%></p>
   
   
  <label for="inputImage">Image</label>
 <p> <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  </p>
 
   <label for="caption">Introduction</label>
   <p> <%= f.text_field :introduction %></p>
   <%= f.submit "Update User", class:"btn btn-secondary" %>
   
<% end %>
</tr>
</table>
</div>
</div>

