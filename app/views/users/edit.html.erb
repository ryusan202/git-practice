<h1>User Info</h1>
 <tr> <%= form_with model: @user do |f| %></tr>
  <label for="inputName">Name</label>
   <p> <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
   
   
  <label for="inputImage">Image</label>
 <p> <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  </p>
 
   <label for="caption">Introduction</label>
   <p> <%= f.text_field :introduction,id:"caption" %></p>
   <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User"<%= f.submit "Update User" %>>
   
<% end %>
</table>
