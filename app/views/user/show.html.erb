
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @User.get_profile_image(100,100) %>
</div>


<% @books_image.each do |post_image| %>
<div>
  <%= link_to books_image_path(post_image.id) do %>
    <%= image_tag books_image.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag books_image.user.get_profile_image(100,100) %></p>
  <p>ショップ名：<%= books_image.shop_name %></p>
  <p>説明：<%= books_image.caption %></p>
  <p>ユーザーネーム：<%= books_image.user.name %></p>
</div>
<% end %>